#:kivy 1.0
#:import Factory kivy.factory.Factory
WidgetsExample:


<MyPopup@Popup>
    auto_dismiss: False
	title: "Create examples and synonyms"
	GridLayout:
		rows: 2
		cols: 2
		padding: 10
		spacing: 10
		TextInput:
			size_hint: None, 1
			width: "200dp"
			font_size: "20dp"
			text: "example_1"
			multiline: True
		Button:
			text: "add example_1"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
        	on_release: root.dismiss()


<WidgetsExample>:
	cols: 1
	rows: 4

	Label:
		text: "definition"
		font_size: "20dp"

	BoxLayout:
		orientation: "horizontal"
		ToggleButton:
			id: toggle_button
			text: "show answer"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"			
			on_state: root.on_toggle_button_state(self)
		Button:
			text: "next definition"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
			on_press: root.on_button_click(toggle_button)


	Label:
		text: root.my_text
		font_size: "30dp"
		color: 1, 0.5, 1

	BoxLayout:
		orientation: "horizontal"
		TextInput:
			id: my_text_input
			size_hint: None, 1
			width: "400dp"
			font_size: "20dp"
			text: "Create new definition here that you want to practice"
			multiline: True
			on_text_validate: root.on_text_validate(self)
		Button:
			text: "add definition"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
			on_press: root.on_add_button_click()
			on_release: Factory.MyPopup().open()
