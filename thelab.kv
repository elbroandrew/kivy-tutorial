#:kivy 1.0
WidgetsExample:
# this defines a main interface


<WidgetsExample>:
	cols: 3
	Button:
		text: "Click here"
		on_press: root.on_button_click()	# root means WidgetsExample iself, we don't use 'self' here.
	Label:
		text: "Hello"



<PageLayoutExample@PageLayout>:
	MainWidget:
	BoxLayoutExample:
	AnchorLayoutExample:
	GridLayoutExample:



<ScrollViewExample@ScrollView>:
	StackLayoutExample:
		# scroll vert
		size_hint: 1, None
		# works in stack lay out
		height: self.minimum_height



<StackLayoutExample>:
	# left-right top-bottom
	# orientation: "rl-tb"

	# padding clockwise
	# padding: ("20dp", "20dp", "20dp", "20dp")

	# spacing horiz vert
	# spacing: "20dp", "30dp"




<GridLayoutExample@GridLayout>:

	# rows
	# cols
	rows: 2

	Button:
		text: "A"
		size_hint: None, 1
		width: "50dp"

	BoxLayout:
        orientation: "vertical"
		spacing: "10dp"
        Button:
            text: "B"
		Button:
            text: "B"
		Button:
            text: "B"
		Button:
            text: "B"

	Button:
		text: "C"
	Button:
		text: "D"
		size_hint: None, 1
		width: "50dp"
	Button:
		text:"E"

	Button:
		text: "F"






<AnchorLayoutExample>:
	# right, left, center
	anchor_x: "right"
	# bottom, top, center
	# anchor_y
	Button:
		text: "F"
		size_hint: 0.1, 0.1


<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint: 0.5, 0.5
        # size: "100dp", "200dp"
        # height: "200dp"

        # x, center_x, right
        # y, center_y, top
        # in percentage
        pos_hint: {"x": 0.1}

    BoxLayout:
        orientation: "vertical"
		spacing: "10dp"
        Button:
            text: "B"
		Button:
            text: "B"
		Button:
            text: "B"
		Button:
            text: "B"

    Label:
        text: "C"



<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
        color: 0, 1, 0, 1

    Label:
        text: "Hello2"
        size: "100dp", "80dp"
        pos: "200dp", "200dp"
        color: 1, 0, 0, 1
