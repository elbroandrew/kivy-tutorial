<WidgetsExample>:
	cols: 1
	rows: 4
	id: widget_layout
	Label:
		text: "definition"
		font_size: "20dp"

	BoxLayout:
		orientation: "horizontal"
		ToggleButton:
			id: toggle_button
			text: "show answer"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"			
			on_state: root.on_toggle_button_state(self)
		Button:
			text: "next definition"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
			on_press: root.on_button_click(toggle_button)


	Label:
		text: root.my_text
		font_size: "30dp"
		color: 1, 0.5, 1

	BoxLayout:
		orientation: "horizontal"
		Button:
			text: "add new"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
			on_release: Factory.AddPopup().open()
		Button:
			text: "update"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
			on_release: Factory.UpdatePopup().open()			
		Button:
			text: "delete"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
			on_release: Factory.DeletePopup().open()
