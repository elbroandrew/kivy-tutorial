#:kivy 1.0
#:import Factory kivy.factory.Factory
WidgetsExample:


<ScrollerPage>:
	viewclass: "Button"
	RecycleBoxLayout:
		padding: 10
		spacing: 5
		default_size: None, 30
		default_size_hint: 1, None
		size_hint_y: None
		height: self.minimum_height
		orientation: "vertical"
		background_color: app.root.oxfordBlue

<AddPopup@Popup>
    auto_dismiss: False
	title: "ADD NEW COLLOCATION"
	BoxLayout:
		orientation: "vertical"
		padding: 10
		spacing: 10
		GridLayout:
			cols: 1
			rows: 1
			TextInput:
				size_hint: 1, 1
				font_size: "20dp"
				text: "example text"
				multiline: True

		BoxLayout:
			orientation: "horizontal"
			Button:
				text: "ADD"
				font_size: "20dp"
				size_hint: 1, None
				height: "45dp"
				on_release: app.root.on_add_button_click()
			Button:
				text: "<< BACK"
				font_size: "20dp"
				size_hint: 1, None
				height: "45dp"
				on_release: root.dismiss()


<UpdatePopup@Popup>
    auto_dismiss: False
	title: "UPDATE COLLOCATION"
	GridLayout:
		rows: 2
		cols: 3
		padding: 10
		spacing: 10
		TextInput:
			size_hint: None, 1
			width: "200dp"
			font_size: "20dp"
			text: "example_1"
			multiline: True
		Button:
			text: "UPDATE"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
        	on_release: app.root.on_update_button_click()
		Button:
			text: "<< BACK"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
        	on_release: root.dismiss()

<DeletePopup@Popup>
    auto_dismiss: False
	title: "DELETE COLLOCATION"
	BoxLayout:
		orientation: "vertical"
		padding: 10
		spacing: 10
		ScrollerPage:

		BoxLayout:
			orientation: "horizontal"
			Button:
				text: "DELETE"
				font_size: "20dp"
				size_hint: 1, None
				height: "45dp"
				on_release: app.root.on_delete_button_click()
			Button:
				text: "<< BACK"
				font_size: "20dp"
				size_hint: 1, None
				height: "45dp"
				on_release: root.dismiss()


<WidgetsExample>:
	cols: 1
	rows: 4
	id: widget_layout
	Label:
		text: "definition"
		font_size: "20dp"

	BoxLayout:
		orientation: "horizontal"
		ToggleButton:
			id: toggle_button
			text: "show answer"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"			
			on_state: root.on_toggle_button_state(self)
		Button:
			text: "next definition"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
			on_press: root.on_button_click(toggle_button)


	Label:
		text: root.my_text
		font_size: "30dp"
		color: 1, 0.5, 1

	BoxLayout:
		orientation: "horizontal"
		Button:
			text: "add new"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
			on_release: Factory.AddPopup().open()
		Button:
			text: "update"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
			on_release: Factory.UpdatePopup().open()			
		Button:
			text: "delete"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
			on_release: Factory.DeletePopup().open()

