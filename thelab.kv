#:kivy 1.0
#:import Factory kivy.factory.Factory
WidgetsExample:


<AddPopup@Popup>
    auto_dismiss: False
	title: "ADD NEW COLLOCATION"
	GridLayout:
		rows: 2
		cols: 2
		padding: 10
		spacing: 10
		TextInput:
			size_hint: None, 1
			width: "200dp"
			font_size: "20dp"
			text: "example_1"
			multiline: True
		Button:
			text: "ADD"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
        	on_release: app.root.on_add_button_click()
		Button:
			text: "CANCEL"
			font_size: "20dp"
			size_hint: 1, None
			height: "45dp"
        	on_release: root.dismiss()


